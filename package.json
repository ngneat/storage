{
  "name": "storage",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "contributors:add": "all-contributors add",
    "hooks:pre-commit": "node hooks/pre-commit.js",
    "commit": "cz",
    "deploy": "ng deploy --base-href=https://username.github.io/repo/",
    "copy": "cpx README.md dist/ngneat/storage",
    "build:lib": "ng build @ngneat/storage --prod && npm run copy",
    "test:lib": "ng test @ngneat/storage",
    "test:lib:headless": "cross-env CI=true npm run test:lib",
    "postbuild:lib": "npm run build --prefix projects/ngneat/storage",
    "semantic-release": "semantic-release",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.0.0",
    "@angular/common": "~12.0.0",
    "@angular/compiler": "~12.0.0",
    "@angular/core": "~12.0.0",
    "@angular/forms": "~12.0.0",
    "@angular/platform-browser": "~12.0.0",
    "@angular/platform-browser-dynamic": "~12.0.0",
    "@angular/router": "~12.0.0",
    "@ngneat/lib": "^2.0.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.0",
    "@angular/cli": "~12.0.0",
    "@angular/compiler-cli": "~12.0.0",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@ngneat/spectator": "^7.1.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "26.0.23",
    "@types/node": "^12.11.1",
    "all-contributors-cli": "^6.20.0",
    "angular-cli-ghpages": "^1.0.0-rc.1",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "git-cz": "^4.7.6",
    "husky": "^5.1.2",
    "jasmine-core": "~3.7.0",
    "jest": "26.6.3",
    "jest-preset-angular": "8.4.0",
    "jsonc-parser": "^3.0.0",
    "lint-staged": "^10.5.4",
    "ng-packagr": "^12.0.2",
    "prettier": "^2.2.1",
    "semantic-release": "^17.3.8",
    "typescript": "~4.2.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,ts,html,component.html}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run hooks:pre-commit && lint-staged"
    }
  }
}
